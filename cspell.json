{
  "version": "0.2",
  "language": "en,es",
  
  "enableFiletypes": ["*"],
  "enabledLanguageIds": ["*"],
  "allowCompoundWords": true,
  
  "import": [
      "@cspell/dict-es-es/cspell-ext.json"
  ],
  
  "dictionaries": [
      "en_US",
      "es",
      "companies",
      "softwareTerms",
      "misc"
  ],

  "words": [
      "CySecRoad",
      "ciberseguridad",
      "cybersecurity",
      "pentesting",
      "hacking"
  ],

  "ignorePaths": [
      "node_modules/**",
      ".git/**",
      "public/**",
      "dist/**"
  ],

  "languageSettings": [
      {
          "languageId": "*",
          "locale": "*",
          "allowCompoundWords": true,
          "enabledLanguageIds": ["en", "es"]
      }
  ]
}
